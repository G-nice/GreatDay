<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    tools:context="com.gnice.greatday.EditorActivity">

    <RelativeLayout
        android:id="@+id/editor_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background">

        <ImageButton
            android:id="@+id/add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5pt"
            android:background="@android:color/transparent"
            android:src="@drawable/add_time_btn"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/done_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5pt"
            android:background="@android:color/transparent"
            android:src="@drawable/done_btn"
            tools:ignore="ContentDescription"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/date_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/weekday_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="WEDNESDAY"
            android:textSize="9pt"/>

        <TextView
            android:id="@+id/rest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" / SEPTEMBER 17 / 2016"
            android:textSize="9pt"/>

    </LinearLayout>


    <EditText
        android:id="@+id/editor_edittext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/editor_toolbar"
        android:layout_below="@id/date_title"

        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:autoLink="web"
        android:background="@color/background"
        android:fastScrollEnabled="true"
        android:gravity="start"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        tools:ignore="LabelFor,TextFields"/>
    <!--android:freezesText="true"-->

</RelativeLayout>